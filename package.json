{
  "name": "code-fitness",
  "version": "0.0.0",
  "description": "Fitness application for Software Projects",
  "author": "Inesh Bose <2504266B@student.gla.ac.uk>",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ineshbose/code-fitness"
  },
  "scripts": {
    "build": "concurrently npm:build:*",
    "build:ext": "cd packages/extension && npm run build",
    "build:app": "cd packages/app && npm run build:webview",
    "dev": "concurrently npm:dev:*",
    "dev:ext": "cd packages/extension && npm run dev",
    "dev:app": "cd packages/app && npm run dev:webview",
    "lint": "eslint ."
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/node": "^18.6.4",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "concurrently": "^7.5.0",
    "eslint": "^8.21.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-svelte": "^2.14.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.9.0",
    "typescript": "^4.7.4",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint -e"
  },
  "lint-staged": {
    "**/*.{js,ts,svelte}": [
      "eslint"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
