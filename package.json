{
  "name": "ext-name",
  "version": "0.0.0",
  "private": true,
  "description": "",
  "author": "Inesh Bose <2504266B@student.gla.ac.uk>",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/ineshbose/ext-name"
  },
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "dist"
  ],
  "engines": {
    "vscode": "^1.69.0"
  },
  "activationEvents": [
    "onStartupFinished",
    "onCustomEditor:myExtension.customEdit"
  ],
  "contributes": {
    "customEditors": [
      {
        "viewType": "myExtension.customEdit",
        "displayName": "Custom Edit",
        "selector": [
          {
            "filenamePattern": "*.txt"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "concurrently npm:build:*",
    "build:ext": "tsup src/index.ts --external vscode",
    "build:svelte": "vite build",
    "dev": "concurrently npm:dev:*",
    "dev:ext": "npm run build:ext -- --watch",
    "dev:svelte": "npm run build:svelte -- --watch",
    "pack": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies",
    "test": "vitest",
    "lint": "eslint .",
    "typecheck": "concurrently \"tsc --noEmit\" \"svelte-check --tsconfig ./tsconfig.json\"",
    "release": "bumpp && npm run publish"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@sveltejs/vite-plugin-svelte": "^1.2.0",
    "@tsconfig/svelte": "^3.0.0",
    "@types/node": "^18.6.4",
    "@types/vscode": "^1.69.0",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "bumpp": "^8.2.1",
    "concurrently": "^7.5.0",
    "eslint": "^8.21.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "esno": "^0.16.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "svelte": "^3.53.1",
    "svelte-check": "^2.9.2",
    "svelte-preprocess": "^4.10.7",
    "tsup": "^6.2.1",
    "typescript": "^4.7.4",
    "vite": "^3.0.4",
    "vitest": "^0.21.0",
    "vsce": "^2.10.0",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint -e"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
